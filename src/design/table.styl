.table
  display: flex
  flex-direction: column

.table-content
  display: flex
  padding: 0 20px
  background: $color-white
  flex-direction: column
  flex: 1

.tab-header
  height: 80px
  display: flex
  align-items: center
  box-sizing: border-box
  background: $color-white
  .tab-box
    margin-right: 10px

.big-list
  flex: 1
  border-radius: 4px
  box-sizing: border-box
  background: $color-white
  overflow: visible
  display: flex
  position: relative
  flex-direction: column

.list-header
  min-height: 45px
  font-family: $font-family-regular
  color: $color-text-main
  background: #F4F8F9
  &:after
    content: ""
    pointer-events: none // 解决iphone上的点击无效Bug
    display: block
    position: absolute
    left: 0
    top: 0
    transform-origin: 0 0
    border-top: 1px solid #E9ECEE
    border-bottom: 0.5px solid #E9ECEE
    box-sizing border-box
    width: 100%
    height: 200%
    transform: scaleY(.5) translateZ(0)
    @media (-webkit-min-device-pixel-ratio: 3), (min-device-pixel-ratio: 3)
      width: 100%
      height: 300%
      transform: scaleY(1 / 3) translateZ(0)
  .list-item
    white-space: nowrap
    font-size: $font-size-14
    display: flex
    align-items: center

.list-box
  padding: 0 20px
  box-sizing: border-box
  border-bottom-1px(#E9ECEE)
  display: flex
  align-items: center
  &:before
    content: ""
    pointer-events: none // 解决iphone上的点击无效Bug
    display: block
    position: absolute
    left: 0
    top: 0
    transform-origin: 0 0
    border-right: 1px solid #E9ECEE
    border-left: 1px solid #E9ECEE
    box-sizing border-box
    width: 200%
    height: 100%
    transform: scaleX(.5) translateZ(0)
    @media (-webkit-min-device-pixel-ratio: 3), (min-device-pixel-ratio: 3)
      width: 100%
      height: 300%
      transform: scaleX(1 / 3) translateZ(0)
  .list-item
    box-sizing: border-box
    padding-right: 20px
    flex: 1
    .list-img
      width: 45px
      height: @width
      object-fit: cover
      overflow: hidden
      border-radius: 50%

.list
  position: relative
  flex: 1
  .list-content
    font-family: $font-family-regular
    color: $color-text-main
    height: 65px
    &:nth-child(2n)
      background: #F4F8F9
    &:hover
      background: #E8F4F9
    .list-item
      no-wrap()
      font-size: $font-size-14
    // 双行样式
    .list-double-row
      .item-sub
        no-wrap()
        line-height: 1.2
        margin-top: 6px
        font-size: $font-size-14
        color: $color-text-assist
      .item-dark
        no-wrap()
        line-height: 1.2
        font-size: $font-size-14
      .item-sub-time
        no-wrap()
        margin-top: 6px
        font-size: $font-size-14
        line-height: 1.2
    .list-item-double
      white-space: normal
      line-height: 18px
      no-wrap-plus()
    .list-item-layout
      layout(row)
      align-items: center

.pagination-box
  height: 66px
  align-items: center
  display: flex

.down-content
  box-sizing: border-box
  border: 0.5px solid $color-line
  border-radius: 4px
  padding: 0 20px
  min-height: 80px
  background: $color-white
  display: flex
  align-items: center
  margin-bottom: 20px
  flex-wrap: wrap
  .down-item
    display: flex
    margin-right: 30px
  .down-item-small
    margin-right: 10px
  .down-item-text
    margin: 20px 80px 0 0
    color: $color-text-main
    .down-text
      font-size: $font-size-12
      color: $color-text-main
      white-space: nowrap
    .header-text
      font-size: $font-size-14
      color: $color-text-main
      white-space: nowrap
  .down-item-text
    margin: 20px 80px 0 0
    color: $color-text-main
    &:last-child
      margin-right: 0
    .down-text
      font-size: $font-size-12
      color: $color-text-main
      white-space: nowrap
    .header-text
      font-size: $font-size-14
      color: $color-text-main
      white-space: nowrap
  .down-tip
    font-size: $font-size-12
    color: $color-text-main
    margin-right: 10px
  .time-tip
    margin: 0 2px
    font-size: $font-size-14

// 按钮样式
.back
  left: 200px
  right: 0
  bottom: 0
  z-index: 10
  background: #F9F9F9
  height: 80px
  border-radius: 0 0 6px 6px
  display: flex
  align-items: center
  padding-left: 40px
  box-sizing: border-box
  justify-content: center
  border-top-1px($color-line)
  position: fixed
  .back-btn
    box-sizing: border-box
    font-size: $font-size-16
    margin-right: 20px
    height: 40px
    line-height: 40px
    width: 96px
    white-space: nowrap
    transition: all 0.3s
    text-align: center
    border-radius: 2px
  .back-submit
    background: $color-main
    color: $color-white
    &:hover
      opacity: 0.8
  .back-cancel
    box-sizing: border-box
    color: $color-text-main
    background: $color-white
    border: 1px solid $color-line
    &:hover
      color: $color-text-sub
      border-color: $color-text-sub
  .btn-disable
    cursor: not-allowed
    background: $color-line
    color: $color-text-assist

// 标题
.identification
  background: $color-white
  height: 72px
  display: flex
  align-items: center
  justify-content: space-between
  box-sizing: border-box
  .identification-page
    display: flex
    align-items: center
  .identification-icon
    width: 14px
    height: 14px
    margin-right: 6px
  .identification-name
    line-height: 1
    white-space: nowrap
    font-size: $font-size-16
    font-family: $font-family-regular
    color: $color-text-main

.function-btn
  display: flex
